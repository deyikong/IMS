@model IMS.ViewModels.TypeIndexViewModel

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Types) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    <tr>
    @using (Html.BeginForm("Create", "Types"))
    {
        @Html.AntiForgeryToken()
        <td>
            @Html.EditorFor(model => model.Type.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Type.Name, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.EditorFor(model => model.Type.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Type.Description, "", new { @class = "text-danger" })
        </td>
        <td>
            <input type="submit" value="Create" class="btn btn-default" />
        </td>
    }
        </tr>

</table>